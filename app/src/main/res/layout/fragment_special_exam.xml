<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SpecialExamFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kindly fill out all the fields provided below"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:fontFamily="bold"
            />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/academic_leave_textview1"
            android:background="@color/beige"
            android:paddingHorizontal="10dp"

            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="10dp"
      android:background="@drawable/custom_button_cancel"
        android:layout_margin="15dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I wish to apply for the following units"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:id="@+id/editunitcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Enter Unit Code"
            />


        <EditText
            android:id="@+id/editTextunit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Enter Unit Name"
            />


        <EditText
            android:id="@+id/editTextsession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Enter Session Applied for"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="10dp"
android:background="@drawable/custom_button_cancel"
        android:layout_margin="15dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason for missing the exam(s)"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/radioButton_fees_arrears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fees Arrears" />


            <RadioButton
                android:id="@+id/radioButton_illness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Illness" />



            <RadioButton
                android:id="@+id/radioButton_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other(Specify Below)" />


        </RadioGroup>




    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="10dp"
            android:layout_margin="20dp"
            >


            <Button

                android:id="@+id/button_special_exam_cancel"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:text="Cancel"
                app:rippleColor="#FF0000"
                app:backgroundTint="#FFFF"
                android:elevation="3dp"



                />




            <Button
                android:id="@+id/button_special_exam_submit"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal"
                android:text="Submit"
                app:cornerRadius="7dp"


                app:rippleColor="@color/teal_200" />





        </LinearLayout>


    </LinearLayout>


</FrameLayout>
</ScrollView>