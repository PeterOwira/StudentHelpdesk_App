<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AcademicLeaveFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="10dp"

        >

        <TextView
            android:id="@+id/academic_leave_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/academic_leave_textview1"
            android:background="@color/beige"
            android:paddingHorizontal="10dp"

            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="10dp"
        android:layout_margin="20dp"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"

            >
        <TextView
            android:id="@+id/textview_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textColor="@color/black"
            android:textSize="15dp"
            />


            <EditText
                android:id="@+id/editstart_date"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:drawableRight="@drawable/ic_calendar_2_line"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="80dp"

            >
            <TextView
                android:id="@+id/textview_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End date"
                android:textColor="@color/black"
                android:textSize="15dp"
                />


            <EditText
                android:id="@+id/editenddate"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:drawableRight="@drawable/ic_calendar_2_line"

                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="25dp"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="bold"
            android:text="Reason for taking an academic leave" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/radioButton_work_onstraints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work Constraints" />


            <RadioButton
                android:id="@+id/radioButton_finacial_problems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Financial Problems" />



            <RadioButton
                android:id="@+id/radioButton_medical_grounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Grounds" />


            <RadioButton
                android:id="@+id/radioButton_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other(Specify Below)" />


        </RadioGroup>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="10dp"
        android:layout_margin="20dp"
        >


        <Button
            android:id="@+id/button_academic_leave_cancel"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:text="Cancel"
            app:cornerRadius="7dp"
            app:rippleColor="#2196F3" />




        <Button
            android:id="@+id/button_academic_leave_submit"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:text="Submit"
            app:cornerRadius="7dp"


            app:rippleColor="#2196F3" />





    </LinearLayout>

    </LinearLayout>




</FrameLayout>