<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Studentdashboard">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
    <TextView
        android:id="@+id/student_dashboard_textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/student_dashboard_textview1"
         android:fontFamily="bold"
        android:layout_margin="20dp"

        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="100dp"
        android:text="Academic Leave Form"
        android:drawableRight="@drawable/ic_arrow_right_s_line"
        android:textSize="20dp"



        />


        <Button
            android:id="@+id/button_exam_remark_form"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="100dp"
            android:text="Exam Remark Form"
            android:drawableRight="@drawable/ic_arrow_right_s_line"
            android:textSize="20dp"



            />


        <Button
            android:id="@+id/special_exam_form"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="100dp"
            android:text="Special Exam Form"
            android:drawableRight="@drawable/ic_arrow_right_s_line"
            android:textSize="20dp"



            />

    </LinearLayout>
</FrameLayout>